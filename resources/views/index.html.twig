{% extends 'layout.html.twig' %}
{% set active = active|default('homepage') %}

{% block content %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div id="cote_code">
        <form action="" method="post" novalidate {{ form_enctype(form) }} class="form-horizontal">
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" name="test" value="test" class="btn btn-primary">{{ 'Test'|trans }}</button>
                <button type="submit" name="save" value="save" class="btn">{{ 'Save'|trans }}</button>
            </div>
        </form>
        </div><!-- #cote_code -->

        <div id="cote_resultat">
        {{ bloc_resultat|raw }}
        </div><!-- #cote_resultat -->

    {% else %}

        <h2>Not logged !</h2>
        Your a not logged. Please <a href="{{ path('login') }}">{{ 'connect'|trans }}</a>
    {% endif %}
{% endblock %}

{% block javascript %}
{{ parent() }}
{% if snippets|length %}
{% raw %}
<script type="text/javascript">
		$(document).ready(function () {
{% endraw %}
			codes=Array();
{% for k,v in snippets %}
			codes['{{ k }}']='{{ v|raw }}';
{% endfor %}

{% raw %}
			$("#form_snippet").change(function()
            {
					var key = $("#form_snippet").val();
					$("#form_code").text(codes[key]);
					$("#form_name").val(key);
				});
			});

</script>
{% endraw %}
{% endif %}
{% endblock %}